<%= form_for(@user) do |f| %>
    <%#= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

            <%= f.label :name %>
            <%= f.text_field :name, class:"col s6"%>


            <%= f.label :email %>
            <%= f.text_field :email, class:"col s6" %>


            <%= f.label :password %>
            <%= f.password_field :password, class: 'col s6' %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'col s6' %>

    <%= f.submit "SignUp", class: "btn btn-large btn-primary" %>
<% end %>

